<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scaleType="fitStart"
        android:src="@drawable/shoes_top" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/search_result_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/common_toolbar_left"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"
            android:src="@drawable/back" />

        <SearchView
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style8"
            android:layout_marginEnd="16dp"
            app:iconifiedByDefault="false" />

    </android.support.v7.widget.Toolbar>


    <TextView
        android:id="@+id/search_result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_result_toolbar"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="鞋子"
        android:textColor="@color/colorwhite"
        android:textSize="25sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_result_rv"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_result_text" />
</RelativeLayout>