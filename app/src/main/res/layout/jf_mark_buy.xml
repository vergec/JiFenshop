<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/nick"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="230dp"
            android:src="@drawable/like"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="40dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:src="@drawable/shoes_1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#e0ffffff"
        android:layout_marginLeft="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="中匡威复男鞋正品1970S经典款帆布鞋"
            android:textColor="#000000"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="板鞋潮款高帮联名低帮女鞋"
            android:textColor="#000000"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="积分       369.00"
            android:textSize="20dp"
            android:textColor="#ff0000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="颜色"
            android:textSize="20dp"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="尺寸"
            android:textSize="20dp"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="数量"
            android:textSize="20dp"
            android:textColor="#000000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
       <Button
           android:layout_width="50dp"
           android:layout_height="20dp"
           android:text=" 蓝色"
           android:textSize="15dp"
           android:textColor="#000000"
           android:gravity="center"
           android:background="@drawable/button_style7"
           android:layout_marginLeft="50dp"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="40"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="center"
            android:background="@drawable/button_style7"
            android:layout_marginLeft="50dp"/>
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginLeft="55dp"
            android:background="@drawable/button_style2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:paddingLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:paddingLeft="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text=" 红色"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="center"
            android:background="@drawable/button_style7"
            android:layout_marginLeft="50dp"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="41"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="center"
            android:background="@drawable/button_style7"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text=" 黄色"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="center"
            android:background="@drawable/button_style7"
            android:layout_marginLeft="50dp"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="42"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="center"
            android:background="@drawable/button_style7"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:gravity="center">
        <Button
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="兑换"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_style5"/>
    </LinearLayout>
</LinearLayout>