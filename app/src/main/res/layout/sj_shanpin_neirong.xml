<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@drawable/button_style7"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp">
        <LinearLayout

            android:id="@+id/goodschange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/xiezi"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NIKE 耐克官方AIR ZOOM PEGASUS35 男子跑步鞋回弹竞速"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="编号："
                        android:textColor="@color/text"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/goods_gid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XXXX"
                        android:textColor="@color/text"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="颜色："
                        android:textColor="@color/text"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/goods_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XXXX"
                        android:textColor="@color/text"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="库存："
                        android:textColor="@color/text"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/goods_kucun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XXXX"
                        android:textColor="@color/text"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/neirong_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="价格："
                        android:textColor="@color/text"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/goods_jiage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥200.00"
                        android:textColor="@color/text"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
            </android.support.v7.widget.LinearLayoutCompat>
        </LinearLayout>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp">
            <Button
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="下架"
                android:textColor="@color/white"
                android:layout_marginLeft="100dp"
                android:background="@drawable/button_style9"/>
        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>
</LinearLayout>
